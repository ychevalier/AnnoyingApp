<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.hci.annoyingapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <supports-screens android:xlargeScreens="false" />

    <!-- GCM connects to Google Services. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!--
     Creates a custom permission so only this app can receive its messages.

     NOTE: the permission *must* be called PACKAGE.permission.C2D_MESSAGE,
           where PACKAGE is the application's package name.
    -->
    <permission
        android:name="edu.hci.annoyingapp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission
        android:name="edu.hci.annoyingapp.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission
        android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name="edu.hci.annoyingapp.AnnoyingApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.hci.annoyingapp.activities.LoginActivity"
            android:label="@string/app_name"
            
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.hci.annoyingapp.activities.AnnoyingActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTranslucent.NoTitleBar.Fullscreen" />
        <activity
            android:name="edu.hci.annoyingapp.activities.MainActivity"
            android:screenOrientation="portrait"/>
        
         <activity
            android:name="edu.hci.annoyingapp.activities.SurveyActivity"/>

        <service
            android:name="edu.hci.annoyingapp.services.AnnoyingService"
            android:exported="false" />

        <provider
            android:name=".provider.AnnoyingAppProvider"
            android:authorities="edu.hci.annoyingapp"
            android:exported="false" />

        <!--
          BroadcastReceiver that will receive intents from GCM
          services and handle them to the custom IntentService.

          The com.google.android.c2dm.permission.SEND permission is necessary
          so only GCM services can send data messages for the app.
        -->
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="edu.hci.annoyingapp" />
            </intent-filter>
        </receiver>

        <service android:name=".GCMIntentService" />
    </application>

</manifest>