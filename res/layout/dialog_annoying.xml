<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/activity_annoying_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dialog_text_padding"
        android:text="@string/dialog_text" />

    <LinearLayout
        android:layout_below="@id/activity_annoying_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activity_annoying_left_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_size"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/activity_annoying_right_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_size"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>